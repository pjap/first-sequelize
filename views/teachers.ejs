<!DOCTYPE html>
<html>
  <head>
    <meta charset = "utf-8">
    <title><%=title %></title>
  </head>

  <body>
    <h1>Halaman Teachers</h1>
    <a href = "/">Back To Home</a>
    <table border="1px solid black" width = "1000px;" style="margin-top:20px;">
      <thead>
        <tr>
          <th>ID</th>
          <th>FIRST NAME</th>
          <th>LAST NAME</th>
          <th>EMAIL</th>
          <th>CREATED AT</th>
          <th>UPDATED AT</th>
          <th>STATUS</th>
        </tr>
      </thead>
      <tbody>
        <%data.forEach( row => { %>
        <tr>
          <td><%= row.id %></td>
          <td><%= row.first_name %></td>
          <td><%= row.last_name %></td>
          <td><%= row.email %></td>
          <td><%= row.createdAt %></td>
          <td><%= row.updatedAt %></td>
          <td>
            <a href="/teachers/edit/<%=row.id%>">Edit</a>
            <a href="/teachers/delete/<%=row.id%>">Hapus</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <form class="" style="margin-top:10px;" action="/teachers" method="POST">
      <input type="text" name="first_name" placeholder="Masukan Nama Disini">
      <input type="text" name="last_name" placeholder="Masukan Perusahaan">
      <input type="text" name="email" placeholder="Masukan No Telpon">
      <input type="submit" value="SUBMIT">
    </form>
  </body>
</html>
